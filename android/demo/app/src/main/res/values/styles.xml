<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:dialogTheme">@style/loading_dialog</item>-->
    </style>

    <style name="titleTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#0000f8</item>
    </style>

    <style name="textnrTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/clearcolor</item>
        <item name="android:windowIsFloating">true</item>
    </style>
<style name="s_true" parent="@android:style/TextAppearance.Small">
  <item name="android:textColor">#33da33</item>
</style>
 
<style name="s_false" parent="@android:style/TextAppearance.Small">
  <item name="android:textColor">#9b9b9b</item>
</style>
</resources>
